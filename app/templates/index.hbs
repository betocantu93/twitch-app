<div class="layourt layout-padding">

  <h1>Top 20</h1>
  <div class="layout flex layout-wrap">
    {{#each model as |game index|}}

      {{#paper-card class="flex" as |card|}}
            {{#card.title as |title|}}
              {{#title.text as |text|}}
                {{#text.headline}}#{{index}} {{game.name}}{{/text.headline}}
              {{/title.text}}
            {{/card.title}}
            {{#card.content class="layout-row layout-align-space-between"}}
              {{#card.media size="xl"}}
                {{#link-to "game" game.id}}
                  <div class="card-media pointer">
                    <img class="img-responsive" src="{{game.thumbnail}}" alt="{{game.name}}">
                  </div>
                {{/link-to}}
              {{/card.media}}
              {{#card.actions class="layout-column"}}
                {{#paper-button iconButton=true}}{{paper-icon "favorite"}}{{/paper-button}}
                {{#paper-button iconButton=true}}{{paper-icon "settings"}}{{/paper-button}}
                {{#paper-button iconButton=true}}{{paper-icon "share"}}{{/paper-button}}
              {{/card.actions}}
            {{/card.content}}
          {{/paper-card}}

    {{/each}}
  </div>


</div>
