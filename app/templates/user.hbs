{{page-title title=model.user.display_name}}

<div class="layout layout-align-center-center video-background">
  {{twitch-video model=model.videos.firstObject}}
</div>

<div class="layout layout-padding layout-wrap flex">
  {{#each model.videos as |video|}}

      <div class="flex-100 flex-gt-xs-50 flex-gt-sm-25 layout">
        {{#paper-card class="flex" as |card|}}
          {{#link-to "video" video.id}}
            {{card.image  class="img-responsive" src=video.thumbnail alt=video.title title=video.title}}
            {{#card.header as |header|}}
              {{#header.text as |text|}}
                {{#text.subhead}}{{video.title}}{{/text.subhead}}
                {{#text.subhead}}{{moment-from-now video.published_at}} | {{video.view_count}} {{paper-icon "remove red eye"}} {{/text.subhead}}
              {{/header.text}}
            {{/card.header}}
          {{/link-to}}
        {{/paper-card}}
      </div>

  {{else}}

  <h1>Sin Canales</h1>


  {{/each}}
</div>
